<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B1D6D9"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/manager_calendarSchedule_prev"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/arrow_back_ios_24"/>

            <TextView
                android:id="@+id/manager_calendarSchedule_date"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:fontFamily="@font/balsamiqsans_regular"
                android:gravity="center"
                android:text="June 2023"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <ImageView
                android:id="@+id/manager_calendarSchedule_next"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/arrow_forward_ios_24"/>

        </LinearLayout>

        <GridLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:columnCount="7">

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_columnWeight="1"
                android:fontFamily="@font/balsamiqsans_regular"
                android:gravity="center"
                android:text="Sun"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_columnWeight="1"
                android:fontFamily="@font/balsamiqsans_regular"
                android:gravity="center"
                android:text="Mon"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_columnWeight="1"
                android:fontFamily="@font/balsamiqsans_regular"
                android:gravity="center"
                android:text="Tue"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_columnWeight="1"
                android:fontFamily="@font/balsamiqsans_regular"
                android:gravity="center"
                android:text="Wed"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_columnWeight="1"
                android:fontFamily="@font/balsamiqsans_regular"
                android:gravity="center"
                android:text="Thu"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_columnWeight="1"
                android:fontFamily="@font/balsamiqsans_regular"
                android:gravity="center"
                android:text="Fri"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_columnWeight="1"
                android:fontFamily="@font/balsamiqsans_regular"
                android:gravity="center"
                android:text="Sat"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

        </GridLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/manager_calendarSchedule_daysContainer"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/manager_calendarSchedule_disable"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"
        android:text="Disable Selected Date"
        android:textAllCaps="false"
        tools:ignore="HardcodedText" />

</LinearLayout>