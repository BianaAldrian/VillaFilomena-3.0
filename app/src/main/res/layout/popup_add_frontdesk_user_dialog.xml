<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Add Front Desk User"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/eb_garamond_semi_bold"/>

    <ImageView
        android:id="@+id/popup_clerksImage"
        android:layout_width="250dp"
        android:layout_height="200dp"
        tools:src="@tools:sample/avatars" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/popup_chooseClerkImage"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/eb_garamond_semi_bold"
        android:text="Choose Image"/>

    <EditText
        android:id="@+id/popup_clerksName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:fontFamily="@font/eb_garamond_regular"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/popup_clerksContact"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Contact Number"
        android:fontFamily="@font/eb_garamond_regular"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/popup_clerksUsername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:fontFamily="@font/eb_garamond_regular"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/popup_clerksPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:fontFamily="@font/eb_garamond_regular"
        android:minHeight="48dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/popup_addClerks_doneBtn"
        android:layout_width="150dp"
        android:text="Done"
        android:layout_height="40dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/eb_garamond_semi_bold"/>

</LinearLayout>