<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/header"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/manager_menuToolbar"
            android:layout_width="35dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/menu_btn" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/beaurivage_regular"
            android:gravity="center"
            android:text="Villa Filomena Natural Spring Resort"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="2">

                <LinearLayout
                    android:id="@+id/manager_onlineBooking"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/cardview_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:src="@drawable/online_booking_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="ONLINE BOOKING"
                        android:textColor="#131212"
                        android:textSize="20sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/manager_calendar"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/cardview_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/calendar_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="CALENDAR"
                        android:textColor="#131212"
                        android:textSize="20sp"/>
                </LinearLayout>

                <!--start of 1-->
                <LinearLayout
                    android:id="@+id/manager_guestHomepage"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/cardview_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/logo" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="GUEST HOMEPAGE"
                        android:textColor="#131212"
                        android:textSize="20sp"/>
                </LinearLayout>
                <!--end of 1-->

                <!--start of 2-->
                <LinearLayout
                    android:id="@+id/manager_RoomCottage_details"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/cardview_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/room"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="ROOM &amp; COTTAGE DETAILS"
                        android:textColor="#131212"
                        android:textSize="20sp"/>
                </LinearLayout>
                <!--end of 2-->

                <!--start of 3-->
                <LinearLayout
                    android:id="@+id/manager_Employee"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/cardview_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/employee"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="FRONT DESK CLERK"
                        android:textColor="#131212"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--start of 5-->
                <LinearLayout
                    android:id="@+id/manager_Transaction"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/cardview_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/transaction_history" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="TRANSACTION HISTORY"
                        android:textColor="#131212"
                        android:textSize="20sp"/>
                </LinearLayout>
                <!--end of 5-->

                <!--start of 6-->
                <LinearLayout
                    android:id="@+id/manager_rateFeedback"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/cardview_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/rates"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="RATE &amp; FEEDBACK"
                        android:textColor="#131212"
                        android:textSize="20sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/manager_orgChart"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/cardview_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:src="@drawable/organizational_chart_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="ORGANIZATION CHART"
                        android:textColor="#131212"
                        android:textSize="20sp"/>
                </LinearLayout>
                <!--end of 6-->

            </GridLayout>

        </LinearLayout>

    </ScrollView>

