<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".FrontDesk.FrontDesk_Booking2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frontDesk_booking2_selectedRoomList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="TextSizeCheck">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:columnCount="4">

                    <TextView
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:background="@drawable/border"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="Details"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:background="@drawable/border"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="Quantity"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:background="@drawable/border"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="Days &amp; Nights"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:background="@drawable/border"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="Total"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:background="@drawable/border"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="Adult/s\nKid/s\nRooms\nCottages"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/frontdesk_booking2_qty"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:background="@drawable/border"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="2\n2\n1\n0"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/frontdesk_booking2_days_nights"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:background="@drawable/border"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="\n2 Days &amp; \n2 Nights\n"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/frontdesk_booking2_tally"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="1"
                        android:background="@drawable/border"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:gravity="center"
                        android:text="₱360\n₱500\n₱2,500\n₱0"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/frontdesk_booking2_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/eb_garamond_medium"
                        android:gravity="center"
                        android:text="Total Payment: ₱3,190"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                </LinearLayout>

            </LinearLayout>

          <!--  <LinearLayout
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/eb_garamond_bold"
                    android:text="Payment"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/frontDesk_booking2_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/eb_garamond_bold"
                    android:text="Total"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/eb_garamond_bold"
                android:text="Mode of Payment"
                android:textColor="@color/black"
                android:textSize="24sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/frontDesk_payment_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/eb_garamond_semi_bold"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:text="CASH"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />

                <CheckBox
                    android:id="@+id/frontDesk_payment_gcash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/eb_garamond_semi_bold"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:text="GCASH"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/frontDesk_booking2_back"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_bg"
                    android:text="back"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/frontDesk_booking2_continue"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_bg"
                    android:text="Continue"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>