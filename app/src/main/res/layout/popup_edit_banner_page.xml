<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--TextView for uploading a banner-->
        <TextView
            android:id="@+id/manager_popup_updateBannerTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Update Banner"
            android:textColor="@color/black"
            android:fontFamily="@font/eb_garamond_semi_bold"
            tools:ignore="HardcodedText" />

        <!--TextView for uploading a introduction-->
        <TextView
            android:id="@+id/manager_popup_updateIntroTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Update Introduction"
            android:textColor="@color/black"
            android:fontFamily="@font/eb_garamond_semi_bold"
            tools:ignore="HardcodedText" />

        <!--TextView for uploading a images-->
        <TextView
            android:id="@+id/manager_popup_updateImageTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Update Images"
            android:textColor="@color/black"
            android:fontFamily="@font/eb_garamond_semi_bold"
            tools:ignore="HardcodedText" />
        
        <ImageView
            android:id="@+id/manager_popupClose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/close"/>

    </LinearLayout>

    <EditText
        android:id="@+id/manager_popupIntroduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/eb_garamond_medium"
        android:gravity="center"
        android:hint="Introduction"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/manager_popupAddedImageList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/manager_popupAddImage"
        android:layout_width="410dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_bg"
        android:text="Add Image"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/manager_popupUpload"
        android:layout_marginTop="10dp"
        android:layout_width="410dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_bg"
        android:text="Upload"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uploads"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/manager_contentViewList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>