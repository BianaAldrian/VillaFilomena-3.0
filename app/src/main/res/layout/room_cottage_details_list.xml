<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent">

        <ImageView
            android:id="@+id/RoomCottageDetail_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            tools:ignore="ContentDescription,ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/RoomCottageDetail_box"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:visibility="gone"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/RoomCottageDetail_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/check"
                android:visibility="gone"
                tools:ignore="ContentDescription" />

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/roomList_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|end"
            android:background="#d3d3d3"
            android:src="@drawable/delete_icon"
            android:visibility="gone"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/RoomCottageDetail_infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/eb_garamond_regular"
        android:gravity="center"
        android:text="ROOM TYPE \nROOM CAPACITY\nROOM RATE"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/RoomCottageDetail_seeMore_Btn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/eb_garamond_medium"
        android:text="See More"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

</LinearLayout>