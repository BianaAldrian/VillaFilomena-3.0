<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/arrival_departure_NO"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:fontFamily="@font/eb_garamond_regular"
        android:gravity="center"
        android:text="No."
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/arrival_departure_guestName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:fontFamily="@font/eb_garamond_regular"
        android:gravity="center"
        android:text="Guest Name"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/arrival_departure_Qty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/eb_garamond_regular"
        android:gravity="center"
        android:text="No. Of People"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/arrival_departure_roomCottage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:fontFamily="@font/eb_garamond_regular"
        android:gravity="center"
        android:text="Rooms &amp; Cottages"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/arrival_departure_total"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/eb_garamond_regular"
        android:gravity="center"
        android:text="Total"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/arrival_departure_balance"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/eb_garamond_regular"
        android:gravity="center"
        android:text="Balance"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/arrival_departure_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/eb_garamond_regular"
        android:gravity="center"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/arrival_departure_status"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/eb_garamond_regular"
        android:gravity="center"
        android:text="Checked-in"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"/>

</LinearLayout>