<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#B0D4D9"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/RoomCottageDetailInfo_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/RoomCottageDetailInfo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/eb_garamond_regular"
        android:gravity="center"
        android:text="Room 104\nCapacity: 4"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/RoomCottageDetailInfo_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/eb_garamond_regular"
        android:text="Details:\nLiving room with 2 sofa chair and 1 dining tables \n1 Bedroom With 2 Double Deck\n1 Bathroom\n1 Sink\n"
        android:textColor="@color/black"
        android:textSize="18sp" />

</LinearLayout>