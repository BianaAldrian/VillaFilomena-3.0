<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eb_garamond_semi_bold"
                android:text="Register"
                android:textColor="@color/black"
                android:textSize="35sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <!--<EditText
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/edttxt_bg"
                    android:text="     Email"
                    android:textAllCaps="false"
                    android:textSize="18sp">-->

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Guest_register_email"
                        android:layout_width="350dp"
                        android:layout_height="60dp"
                        android:background="@drawable/edttxt_bg"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:hint="Email                                                     @gmail.com"
                        android:inputType="textEmailAddress"
                        android:textColor="#5C5353"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--<EditText
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/edttxt_bg"
                        android:text="     Password"
                        android:textAllCaps="false"
                        android:textSize="18sp"/>-->

                    <!-- <androidx.appcompat.widget.AppCompatEditText
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:background="@drawable/password_eye"
                         android:layout_marginRight="200dp"/>-->

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleDrawable="@drawable/password_eye"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Guest_register_password1"
                            android:layout_width="350dp"
                            android:layout_height="60dp"
                            android:background="@drawable/edttxt_bg"
                            android:fontFamily="@font/eb_garamond_regular"
                            android:hint="Password"
                            android:password="true"
                            android:textColor="#5C5353"
                            android:textSize="18sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--<EditText
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/edttxt_bg"
                        android:text="     Password"
                        android:textAllCaps="false"
                        android:textSize="18sp"/>-->

                    <!-- <androidx.appcompat.widget.AppCompatEditText
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:background="@drawable/password_eye"
                         android:layout_marginRight="200dp"/>-->

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleDrawable="@drawable/password_eye"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Guest_register_password2"
                            android:layout_width="350dp"
                            android:layout_height="60dp"
                            android:background="@drawable/edttxt_bg"
                            android:fontFamily="@font/eb_garamond_regular"
                            android:hint="Confirm Password"
                            android:password="true"
                            android:textColor="#5C5353"
                            android:textSize="18sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Guest_register_FName"
                        android:layout_width="350dp"
                        android:layout_height="60dp"
                        android:background="@drawable/edttxt_bg"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:hint="First Name"
                        android:inputType="textEmailAddress"
                        android:textColor="#5C5353"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Guest_register_LName"
                        android:layout_width="350dp"
                        android:layout_height="60dp"
                        android:background="@drawable/edttxt_bg"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:hint="Last Name"
                        android:inputType="textEmailAddress"
                        android:textColor="#5C5353"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Guest_register_contact"
                        android:layout_width="350dp"
                        android:layout_height="60dp"
                        android:background="@drawable/edttxt_bg"
                        android:fontFamily="@font/eb_garamond_regular"
                        android:hint="Contact Number"
                        android:inputType="textEmailAddress"
                        android:textColor="#5C5353"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Guest_register_registerBtn"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="190dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/eb_garamond_medium"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="22sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/eb_garamond_regular"
                    android:text="Already registered?"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/Guest_register_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/eb_garamond_bold"
                    android:text=" Login"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>